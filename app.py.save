APP_SECRET = os.environ.get("APP_SECRET", "dev-secret-change-me")
DB_PATH = os.path.join(os.path.dirname(__file__), "chronos.db")
ADMIN_EMAILS = [e.strip().lower() for e in os.environ.get("ADMIN_EMAILS", "").split(",") if e.strip()]

